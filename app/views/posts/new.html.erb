<%# Page title for layout %>
<% content_for :page_title, 'アクションプラン設定|smoke free' %>

<div class="ap-wrapper">
  <%= render 'shared/ap_topbar',icon_to: dashboards_path, back_to: dashboards_path, right: 'アクションプラン設定' %>
  <main class="ap-main">
    <section class="ap-card">
      <h1 class="ap-title">
         <%= image_tag "light-bulb-idea-svgrepo-com.svg", alt: '', class: 'ap-title-icon' %>
        <div class="ap-title-text">1日の中で吸いたくなるような場面を想定しましょう</div>
      </h1>

      <%= form_with model: @post, url: posts_path, method: :post, class: "ap-form" do |f| %>
        <%= f.text_area :body,
                        placeholder: "例：\n・朝吸いたくなったら、ニコチンガムを噛む\n・上司にタバコを誘われたら、吸わない言い訳を考えてみる",
                        class: "ap-textarea",
                        id: "post_content" %>

        <div class="ap-actions">
          <%= f.submit "設定する", class: "ap-submit" %>
        </div>
      <% end %>
    </section>
  </main>
</div>
