<%# Page title for layout %>
<% content_for :page_title, 'アクションプラン設定 | SmokeFree' %>

<div class="ap-wrapper">
  <header class="ap-topbar">
   <div class="auth-header-background">
    <div class="logo-back-link">
      <%= link_to dashboard_path, class: 'auth-logo-link', aria: { label: 'トップへ戻る' } do %>
        <%= image_tag 'back-svgrepo-com.svg', alt: '', class: 'auth-logo' %>
      <% end %>
    </div>
    <div class="back-link">
      <%= link_to '戻る', root_path, class: 'link' %>
    </div>
  </div>
    <div class="ap-right">アクションプラン設定</div>
  </header>

  <main class="ap-main">
    <section class="ap-card">
      <h1 class="ap-title">
        <span class="ap-title-icon">💡</span>
        1日の中で吸いたくなるような場面を想定しましょう
      </h1>

      <%= form_with model: @post, url: posts_path, method: :post, class: "ap-form" do |f| %>
        <label class="ap-example-title" for="post_content">例：</label>
        <%= f.text_area :body,
                        placeholder: "例：\n・朝吸いたくなったら、ニコチンガムを噛む\n・上司にタバコを誘われたら、吸わない言い訳を考えてみる",
                        class: "ap-textarea",
                        id: "post_content" %>

        <div class="ap-actions">
          <%= f.submit "設定する", class: "ap-submit" %>
        </div>
      <% end %>
    </section>
  </main>
</div>
